
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="login">

    <div class="input">
        @using (Html.BeginForm()) { 
            <p><label>Username:</label> <input type="text" name="userName" /></p>   
            <p><label>Password:</label> <input type="text" name="password" /></p> 
            <p><input type="submit" value="Login" /></p>
        }
    </div>
    @ViewBag.errorLogin
</div>

