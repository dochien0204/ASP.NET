
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="login">
    <div class="input">
        @using(Html.BeginForm())
            {
                <p><label>Username:</label> <input name="userName" type="text"/></p>
                <p><label>Password:</label> <input name="password" type="text"/></p>
                <p><input type="submit" value="Login" /> </p>
            }
    </div>
    @ViewBag.errorLogin
</div>

