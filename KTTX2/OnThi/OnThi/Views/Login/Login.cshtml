
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="login">
    <div class="input">
        @using(Html.BeginForm())
            {
                <p><label>Username:</label> <input type="text" name="userName" /></p>
                <p><label>Password:</label> <input type="password" name="password" /></p>
                <p><input type="submit" class="lg" value="Login" /></p>
            }
    </div>
    <div style="color: red">
    @ViewBag.errLogin
    </div>
</div>

