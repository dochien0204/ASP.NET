@model IEnumerable<De02.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

@using(Html.BeginForm())
            {
                <p>
                    Tìm mặt hàng : @Html.TextBox("searchString");
                    <input type="submit" value="Tìm" />
                </p>
            }
<table class="table">
    <tr>
        <th>
           @Html.ActionLink("Tên hàng", "Index", new {sortOrder = ViewBag.SapTheoTen})
        </th>
        <th>
            @Html.ActionLink("Giá", "Index", new { sortOrder = ViewBag.SapTheoGia })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.proname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
           @{ 
               string imagePath = "~/wwwroot/PhoneImages/" + item.image;
           }
            <img src="@Url.Content(imagePath)" width="100" class="img-thumbnail" />
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.proid }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.proid }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.proid })
        </td>
    </tr>
}

</table>
